<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="DeleteButtonStyle">
        <Setter Property="Button.Content" Value="[x]"/>
        <Setter Property="Button.Foreground" Value="GhostWhite"/>
        <Setter Property="Button.VerticalContentAlignment" Value="Center"/>
        <Setter Property="Button.Background" Value="Firebrick"/>
        <Setter Property="Button.Margin" Value="2,0,2,0"/>
    </Style>
</ResourceDictionary>