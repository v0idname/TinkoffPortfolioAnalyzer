<Window x:Class="TinkoffPortfolioAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:local="clr-namespace:TinkoffPortfolioAnalyzer"
        xmlns:vm="clr-namespace:TinkoffPortfolioAnalyzer.ViewModels"
        Title="TinkoffPortfolioAnalyzer" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Tinkoff Tokens">
            </MenuItem>
        </Menu>
        <TabControl>
            <TabItem Header="Portfolio">
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="99*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="199*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Portfolio Id:">
                        </TextBlock>
                        <ComboBox Grid.Row="0" Grid.Column="1" Name="Update" Width="600" Height="20"></ComboBox>
                    </Grid>
                    <DataGrid Grid.Row="1" ItemsSource="{Binding SecuritiesInfo}"></DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
